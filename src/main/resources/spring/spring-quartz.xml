          <!--class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">-->
        <!--<property name="targetObject" ref="ScheduleJob"/>-->
        <!--<property name="targetMethod" value="execute"/>-->
    <!--</bean>-->
    <!--<bean id="SchedulerJobTrigger"-->
          <!--class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">-->
        <!--<property name="jobDetail" ref="SchedulerJobDetail"/>-->
        <!--&lt;!&ndash;<property name="cronExpression" value="0 6 * * *"/>&ndash;&gt;-->
        <!--&lt;!&ndash; 每天凌晨一点运行 &ndash;&gt;-->
        <!--<property name="cronExpression" value="0 0 1 * * ?"/>-->
    <!--</bean>-->

    <bean id="jobFactory" class="com.lids.quartz.MyJobFactory"></bean>

    <bean name="schedulerFactoryBean" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="AccessTokenJobTrigger" />
                <!--<ref bean="SchedulerJobTrigger" />-->
            </list>
        </property>
        <property name="jobFactory" ref="jobFactory"></property>
    </bean>

</beans>